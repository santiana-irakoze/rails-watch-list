<div class="container my-5">
  <h1 class="text-start fw-bold mb-4">My lists</h1>
    <% @lists.each do |list| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="card-text"><strong></strong> <%= list.name %></p>

            <%= link_to 'see details', list_path(list), class: 'btn btn-sm btn-secondary' %>
            <%= link_to 'delete', list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger", title: "Delete" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to 'Add new list', new_list_path, class: 'btn btn-sm btn-primary' %>
</div>
