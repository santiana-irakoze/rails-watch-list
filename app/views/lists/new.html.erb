<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <h1 class="mb-4 text-center" style="color: red; font-weight: bold;">Create a movie list</h1>
      <div class="card shadow-sm">
        <div class="card-body">
          <%= simple_form_for(@list) do |f| %>
            <%= f.input :name %>
            <%= f.submit 'Create List', class: 'btn btn-warning' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
